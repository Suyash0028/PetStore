extends common/layout 

block main-content 
  h1.page-title Hello! Welcome to our pet store.
  h5.page-title We have eveything that your pet needs!!!
  p Here are some things available at best price for your pets:
  table.table.table-striped.text-center
    thead 
        tr 
            th Name 
            th Description 
            th Price 
            th Action
            th
        tbody
            each pet in petInfos 
                tr 
                    td  
                        =pet.name
                    td 
                        =pet.description
                    td 
                        =pet.price 
                    td 
                        form(action="/pet/edit")
                            input(type="hidden", name="petId", value=pet._id)
                            button.btn.btn-dark(type="submit") Edit
                    td
                        form(action="/pet/cart", method="post")
                            input(type="hidden", name="petId", value=pet._id)
                            button.btn.btn-dark(type="submit") Add